page {
  width: 100%;
  height: 100%;
}
.content-box {
  display: flex;
  min-height: 100vh;
  height: 100%;
  width: 100%;
  flex-direction: column;
}
.content-box  .u-popup .u-popup__content {
  width: 90%;
  padding: 30px 10px 20px 10px;
  box-sizing: border-box;
  border-radius: 14px;
}
.content-box  .u-popup .u-popup__content .u-popup__content__close .u-icon__icon {
  color: #101010 !important;
}
.content-box  .u-popup .u-popup__content .support-staff-content .support-staff-top {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.content-box  .u-popup .u-popup__content .support-staff-content .support-staff-top > image {
  width: 106px;
  height: 129px;
}
.content-box  .u-popup .u-popup__content .support-staff-content .support-staff-top > text {
  font-size: 18px;
  color: #101010;
}
.content-box  .u-popup .u-popup__content .support-staff-content .support-staff-top > text:nth-of-type(1) {
  margin: 10px 0;
}
.content-box  .u-popup .u-popup__content .support-staff-content .support-staff-bottom {
  display: flex;
  margin-top: 20px;
}
.content-box  .u-popup .u-popup__content .support-staff-content .support-staff-bottom .support-staff-left {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.content-box  .u-popup .u-popup__content .support-staff-content .support-staff-bottom .support-staff-left > image {
  width: 24px;
  height: 24px;
  margin-bottom: 6px;
}
.content-box  .u-popup .u-popup__content .support-staff-content .support-staff-bottom .support-staff-left uni-button {
  height: 20px;
  line-height: 20px;
  background: #fff;
}
.content-box  .u-popup .u-popup__content .support-staff-content .support-staff-bottom .support-staff-left uni-button image {
  width: 24px;
  height: 24px;
}
.content-box  .u-popup .u-popup__content .support-staff-content .support-staff-bottom .support-staff-left uni-button:after {
  border: none;
}
.content-box  .u-popup .u-popup__content .support-staff-content .support-staff-bottom .support-staff-left button {
  height: 20px;
  line-height: 20px;
  background: #fff;
  font-size: 14px;
  color: #4E9FD5;
}
.content-box  .u-popup .u-popup__content .support-staff-content .support-staff-bottom .support-staff-left button:after {
  border: none;
}
.content-box  .u-popup .u-popup__content .support-staff-content .support-staff-bottom .support-staff-right {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.content-box  .u-popup .u-popup__content .support-staff-content .support-staff-bottom .support-staff-right > image {
  width: 24px;
  height: 24px;
  margin-bottom: 6px;
}
.content-box  .u-popup .u-popup__content .support-staff-content .support-staff-bottom .support-staff-right > text {
  font-size: 14px;
  color: #4E9FD5;
}
.content-box .top-area-box {
  position: relative;
  width: 100%;
  height: 330px;
}
.content-box .top-area-box  .nav {
  width: 100%;
  background: #fff;
  position: absolute;
  top: 0;
  left: 0;
}
.content-box .top-area-box  .nav .header_title_center {
  color: #fff !important;
}
.content-box .top-area-box  .nav .header_title_center text {
  color: #fff !important;
}
.content-box .top-area-box > image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 230px;
}
.content-box .top-area-box .user-info {
  width: 100%;
  height: 230px;
  display: flex;
  align-items: center;
  color: #fff;
  font-size: 20px;
  padding-left: 10px;
  box-sizing: border-box;
}
.content-box .top-area-box .user-info .user-photo {
  width: 76px;
  height: 76px;
  background: #fff;
  margin-right: 15px;
  border-radius: 50%;
  z-index: 1;
}
.content-box .top-area-box .user-info .user-photo image {
  width: 76px;
  height: 76px;
  border-radius: 50%;
}
.content-box .top-area-box .user-nickname {
  display: flex;
  flex-direction: column;
  justify-content: center;
  flex: 1;
  padding-right: 10px;
  box-sizing: border-box;
  z-index: 1;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}
.content-box .top-area-box .user-nickname > text {
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}
.content-box .top-area-box .center-area-box {
  width: 94%;
  position: absolute;
  left: 3%;
  top: 190px;
  height: 130px;
  background: #fff;
  margin: 0 auto;
  border-radius: 10px;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0px 2px 6px 0 rgba(92, 133, 136, 0.29);
}
.content-box .top-area-box .center-area-box > view {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.content-box .top-area-box .center-area-box > view > image {
  width: 58px;
  height: 58px;
  margin-bottom: 10px;
}
.content-box .top-area-box .center-area-box > view > text {
  color: #101010;
  font-size: 14px;
}
.content-box .bottom-area-box {
  width: 90%;
  margin: 0 auto;
  padding: 0 2px;
  box-sizing: border-box;
  margin-top: 6px;
  display: flex;
  flex-direction: column;
  flex: 1;
  overflow: auto;
}
.content-box .bottom-area-box > view {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 40px;
  margin-bottom: 16px;
}
.content-box .bottom-area-box > view .function-item-left > image {
  width: 24px;
  height: 24px;
  margin-right: 6px;
  vertical-align: middle;
}
.content-box .bottom-area-box > view .function-item-left > text {
  color: #101010;
  font-size: 14px;
  vertical-align: middle;
}

